@using MagicVilla_Web.Models.DTO;
@model RegisterationRequestDTO

<form method="post">
    <div class="container border p-4 mt-3">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Username..." />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Name" type="text" class="form-control" placeholder="Name..." />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="text" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="col-6 offset-3 pb-2">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option selected disabled>--Select Role--</option>
                </select>

            </div>

            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>

            </div>
        </div>
    </div>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}