@{
    ViewData["Title"] = "Update Villa Number";
}

@using MagicVilla_Web.Models.ViewModels;

@model UpdateVillaNumberVM

<form asp-action="UpdateVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Villa</h1>
        <hr />
        <input hidden asp-for="UpdateVillaNumberDTO.VillaNo" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="UpdateVillaNumberDTO.VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UpdateVillaNumberDTO.VillaNo" disabled class="form-control" />
                <span asp-validation-for="UpdateVillaNumberDTO.VillaNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="UpdateVillaNumberDTO.VillaId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="UpdateVillaNumberDTO.VillaId" class="form-select" asp-items="@Model.VillasList">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <span asp-validation-for="UpdateVillaNumberDTO.VillaId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="UpdateVillaNumberDTO.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="UpdateVillaNumberDTO.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="UpdateVillaNumberDTO.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="VillaNumberIndex" asp-controller="VillaNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}